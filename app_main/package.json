    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^14.0.0",
    "@farcaster/auth-kit": "^0.2.1",
    "@neynar/nodejs-sdk": "^1.24.0",
    "axios": "^1.6.0",
